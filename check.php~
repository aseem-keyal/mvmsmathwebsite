<?php
	include("inputsanitize.php");
	$id = $_POST['id'];
	$question = $_POST['question'];
	$answer = sanitize($_POST['answer']);
	$query = "select * from " . $id . " where id=" . $question . ";";
	$mysqli = new mysqli("localhost", "mvmsmath", "mvmsmath", "mvmsmath_questions");
	$result = $mysqli->query($query);

	$questiondata = $result->fetch_assoc();
	if (abs($questiondata['answer' . $question]  - $answer) <= ($questiondata['answer' . $question] * $questiondata['tolerance'])) {
	   $correct = True;
	} else {
	   $correct = False;
	}

	$result->free();
	$mysqli->close();

	var_dump($_POST);
	var_dump($query);
	var_dump($questiondata);
	var_dump($answer);
	var_dump($correct);

